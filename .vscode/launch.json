    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen smooapi from rdebug-ide",
            "type": "Ruby",
            "request": "attach",
            "remoteHost": "127.0.0.1",
            "remotePort": "8000",
            "remoteWorkspaceRoot": "${workspaceRoot}"
        },
        {
			"name": "debug current file",
			"type": "Ruby",
            "request": "attach",
            "cwd": "${workspaceRoot}/clients",
			"program": "${file}"
        }
    ]
}